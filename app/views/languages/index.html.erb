<section class="m-3">
<h1>Languages</h1>

<ul class="list-group">
  <% @languages.each do |language| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to language.title, language_path(language), class: "mr-auto" %>
      <div class="btn-group" role="group">
        <%= link_to "Edit", edit_language_path(language), class: "btn btn-primary mr-2" %>
        <%= button_to "Delete", language, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete #{language.title}?" } %>
      </div>
    </li>
  <% end %>
</ul>
<br>
<%= link_to "Add New Language", new_language_path, class: "btn btn-success" %>
</section>