<div class="container m-3">
  <h1><%= @language.title %></h1>
  <p><%= @language.description %></p>
  <p><a href="<%= @language.link %>">Learn more</a></p>

  <div class="d-flex justify-content-start align-items-center mb-3">
    <%= link_to "Edit", edit_language_path(@language), class: "btn btn-primary mr-2" %>
    <%= button_to "Delete", language_path(@language), method: :delete, class: "btn btn-danger mr-2", data: { confirm: "Are you sure you want to delete #{@language.title}?" } %>
  </div>
  
  <%= link_to languages_path, class: "btn btn-secondary" do %>
    <i class="bi bi-arrow-left"></i>
  <% end %>
</div>