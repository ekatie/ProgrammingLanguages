<section class="m-3">
  <div class="container">
    <h1>Edit Programming Language</h1>

    <%= form_with(model: @language, url: language_path(@language), method: :patch, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :link %>
        <%= form.text_field :link, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.submit "Update Language", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= link_to languages_path, class: "btn btn-secondary mt-3" do %>
      <i class="bi bi-arrow-left"></i>
    <% end %>
  </div>
</section>